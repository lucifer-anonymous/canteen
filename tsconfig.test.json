{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./dist-test",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
