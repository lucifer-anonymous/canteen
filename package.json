{
  "name": "canteen-backend",
  "version": "1.0.0",
  "description": "Backend for Canteen Management System",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r module-alias/register dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "env-cmd -f .env.test jest --config=jest.config.js",
    "test:watch": "env-cmd -f .env.test jest --watch --config=jest.config.js",
    "test:coverage": "env-cmd -f .env.test jest --coverage --config=jest.config.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "ts-node -r tsconfig-paths/register src/seed/seed.ts",
    "create-admin": "ts-node -r tsconfig-paths/register src/seed/createAdmin.ts"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "keywords": [
    "canteen",
    "management",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "envalid": "^8.0.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "module-alias": "^2.2.3",
    "mongoose": "^9.1.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.14",
    "openapi-types": "^12.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.9",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "env-cmd": "^11.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
