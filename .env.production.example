# Production Environment Variables for Backend (Render)
# DO NOT commit actual values - use Render dashboard to set these

NODE_ENV=production
PORT=10000

# MongoDB Connection (Get from Render dashboard after creating database)
MONGO_URI=mongodb+srv://username:password@host/canteen?retryWrites=true&w=majority

# JWT Configuration (Auto-generated by Render or set manually)
JWT_SECRET=your_super_secure_random_secret_key_here
JWT_EXPIRES_IN=7d

# CORS Configuration (Your Vercel frontend URL)
CORS_ORIGIN=https://your-app.vercel.app

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@canteen.com

# Application Settings
MAX_FILE_SIZE=5242880
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
